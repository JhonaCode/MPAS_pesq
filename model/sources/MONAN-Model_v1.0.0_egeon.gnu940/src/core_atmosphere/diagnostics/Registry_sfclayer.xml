<!-- ******************************* -->
<!-- sfclayer diagnostics               -->
<!-- ******************************* -->
<var_struct name="diag" time_levs="1">
        <var name="alh"                     type="real"     dimensions="nCells Time" units="W m^{-2}"
             description="Time Mean latent heat flux at the surface"/>

        <var name="ahfx"                    type="real"     dimensions="nCells Time" units="W m^{-2}"
             description="Time Mean upward heat flux at the surface"/>

        <var name="sfc_runoff"              type="real"      dimensions="nCells Time" units="mm"
             description="Time Mean surface runoff"/>

        <var name="udr_runoff"              type="real"      dimensions="nCells Time" units="mm"
             description="Time Mean underground runoff"/>

        <var name="sms_total"               type="real"       dimensions="nCells Time" units="m^3 m^{-3}"
             description="Time Mean total soil mositure"/>

        <var name="smois_lys01"             type="real"      dimensions="nCells Time" units="m^3 m^{-3}"
             description="Time Mean soil moisture layers01"/>

        <var name="smois_lys02"             type="real"      dimensions="nCells Time" units="m^3 m^{-3}"
             description="Time Mean soil moisture layers02"/>

        <var name="smois_lys03"             type="real"      dimensions="nCells Time" units="m^3 m^{-3}"
             description="Time Mean soil moisture layers03"/>

        <var name="smois_lys04"             type="real"      dimensions="nCells Time" units="m^3 m^{-3}"
             description="Time Mean soil moisture layers04"/>

        <var name="tslb_lys01"              type="real"       dimensions="nCells Time" units="K"
             description="Time Mean soil layer temperature layers01"/>

        <var name="tslb_lys02"              type="real"       dimensions="nCells Time" units="K"
             description="Time Mean soil layer temperature layers02"/>

        <var name="tslb_lys03"              type="real"       dimensions="nCells Time" units="K"
             description="Time Mean soil layer temperature layers03"/>

        <var name="tslb_lys04"              type="real"       dimensions="nCells Time" units="K"
             description="Time Mean soil layer temperature layers04"/>

        <var name="u10mt"                   type="real" dimensions="nCells Time"  units="m s^{-1}"
             description="Time Mean 10-meter zonal wind"/>

        <var name="v10mt"                   type="real" dimensions="nCells Time"  units="m s^{-1}"
             description="Time Mean 10-meter meridional wind"/>

        <var name="q02mt"                   type="real" dimensions="nCells Time"  units="kg kg^{-1}"
             description="Time Mean 2-meter specific humidity"/>

        <var name="t02mt"                   type="real" dimensions="nCells Time"  units="K"
             description="Time Mean 2-meter temperature"/>

        <var name="nsteps_accum_sfcpbl"     type="real"     dimensions="nCells Time" units="unitless"
             description="number of accumulated time-steps sfc pbl"/>

</var_struct>
